<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.InterestCalculator" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/highlight_blue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/light_blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/highlight_blue</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark_blue</item>
        <item name="android:navigationBarColor">@color/light_blue</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:textColor">@color/white</item>

        <!-- Customize your theme here. -->
    </style>
    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="toggleTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">#1da1f3 </item>
        <item name="colorSwitchThumbNormal">#eaf4fc</item>
        <item name="android:colorForeground">#ffffff</item>

    </style>
<!--    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar.Bridge"/>-->

    <style name="vibhuButtonThemeForCalenderPicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">#ffffff</item>
        <item name="backgroundTint">#1da1f3</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>


    <style name="myPrefixTextSize" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">20sp</item>
    </style>
<!--    <style name="WhiteColorAccent">-->
<!--        <item name="colorAccent">#ffffff</item>-->
<!--    </style>-->

    <style name="alertDialogCalendarPicker" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:dialogCornerRadius">10dp</item>
        <item name="android:background">#10171f</item>
        <item name="colorAccent">#1da1f3</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DatePickerTheme.ButtonBarNegativeButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/vibhuButtonThemeForCalenderPicker</item>
        <item name="android:textColorPrimary">#d9ffffff</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="DatePickerTheme.ButtonBarNegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/light_white</item>
    </style>

    <style name="alertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:dialogCornerRadius">10dp</item>
        <item name="android:background">#10171f</item>
        <item name="android:textColorPrimary">#d9ffffff</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="NavigationItemNoRipple">
        <item name="android:colorControlHighlight">@android:color/transparent</item>
    </style>
    <style name="SplashTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_bg</item>
        <item name="android:navigationBarColor">#001da1f3</item>

    </style>


</resources>