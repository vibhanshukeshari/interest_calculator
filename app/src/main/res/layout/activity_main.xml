<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:forceDarkAllowed="false"
    android:id="@+id/rlMain"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/autoPlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:elevation="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Simple"
            android:textSize="15sp"
            android:minHeight="55dp"
            android:drawableLeft="@drawable/ic_baseline_save_24"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"/>


        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="compound"
            android:textSize="15sp"
            android:minHeight="55dp"
            android:drawableLeft="@drawable/ic_baseline_save_24"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"/>


    </LinearLayout>


    <RelativeLayout
        android:id="@+id/bottom_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/controller"
        android:layout_below="@+id/autoPlay">


        <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="5dp" />


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/controller"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:layout_above="@+id/bottom_navigation">

        <LinearLayout
            android:id="@+id/textViewResultTopBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#39434d"
            android:orientation="horizontal"
            android:paddingTop="0.2dp" />


        <LinearLayout
            android:id="@+id/controller1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/light_blue"
            android:elevation="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:ellipsize="end"
                        android:maxWidth="160dp"
                        android:maxLines="1"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:text="Total Amount =>"
                        android:textColor="#ffffff"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/textViewRupeesSymbol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2,000"
                        android:textAlignment="center"
                        android:textColor="#3bd16f"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/textViewResult"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:textColor="#3bd16f"
                        android:textSize="20sp" />


                </LinearLayout>

                <TextView
                    android:id="@+id/textViewWordsCalculationFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Zero Rupees Only. "
                    android:paddingStart="9dp"
                    android:paddingEnd="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="#ccffffff"
                    android:textColorHint="#8899a6"
                    android:textSize="14sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="5dp">

                <Button
                    android:id="@+id/save_button"
                    style="@style/Widget.MaterialComponents.Button.Icon"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#1da1f3"
                    app:icon="@drawable/ic_baseline_save_24"
                    app:iconGravity="textEnd"
                    app:iconTint="#ffffff" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#39434d"
            android:orientation="horizontal"
            android:paddingTop="0.2dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#39434d"
        android:orientation="horizontal"
        android:paddingTop="0.2dp" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#39434d"
        android:layout_above="@id/bottom_navigation"
        android:orientation="horizontal"
        android:paddingTop="0.2dp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/light_blue"
        app:itemIconTint="@color/bottom_navigation_color"
        app:itemRippleColor="@color/highlight_blue"
        app:itemTextColor="@color/bottom_navigation_color"
        app:labelVisibilityMode="selected"
        app:menu="@menu/menu_bottom" />



</RelativeLayout>