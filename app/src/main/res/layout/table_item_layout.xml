<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:id="@+id/linear_layout_table_item_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@color/dark_blue"
            android:orientation="horizontal">


        <View android:layout_width="0.5dp"
            android:background="@color/light_white"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/text_view_year"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/blue_white"
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:padding="10dp" />

        <View android:layout_width="0.25dp"
            android:background="@color/light_white"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/text_view_interest"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/blue_white"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="10dp" />
        <View android:layout_width="0.25dp"
            android:background="@color/light_white"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/text_view_accrued_interest"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="14sp"
            android:padding="10dp"
            android:layout_width="0dp"
            android:textColor="@color/blue_white"
            android:layout_weight="1" />
        <View android:layout_width="0.25dp"
            android:background="@color/light_white"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/text_view_balance"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@color/blue_white"
            android:textSize="14sp"
            android:layout_width="0dp"
            android:layout_weight="1" />


        <View android:layout_width="0.5dp"
            android:background="@color/light_white"
            android:layout_height="match_parent"/>

        </LinearLayout>

        <View android:layout_width="match_parent"
            android:background="@color/light_white"
            android:layout_height="0.5dp"/>





</LinearLayout>
